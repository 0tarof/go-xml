<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="internationalPrice">
    <xs:complexType>
      <xs:attribute name="currency" type="xs:string"/>
      <xs:attribute name="value"    type="xs:decimal"/>
    </xs:complexType>
  </xs:element>
</xs:schema>
